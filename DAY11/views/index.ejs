<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management </title>
</head>
<body>
    <h1>User List</h1>
    <a href="/add">Add new User</a>
    <table border="1px">
       <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
       </thead>
       <tbody>
         <% users.forEach(user =>{ %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                   <a href="/edit/<%= user.id %>">change</a>
                   <a href="/delete/<%= user.id %>">Delete</a>   
                </td>
              </tr>
       <%  }) %>
       </tbody>
    </table>
</body>
</html>